<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<div class="row">
    <div class="col-md-6">
    <%= form_for(@message) do |f| %>
      名前:
      <%= f.text_field :name %>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6">
      内容:
      <%= f.text_area :body %>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6">
      <%= f.submit class: "btn btn-md btn-primary" %>
    </div>
    </div>
    <% end %>
</div>